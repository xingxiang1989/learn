<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="click"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv"
            android:text="显示viewStub"
            android:padding="10dp"
            android:onClick="@{v->click.onClick(v)}"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv2"
            android:text="隐藏viewstub"
            android:padding="10dp"
            android:onClick="@{v->click.onClick(v)}"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_loading"
            android:text="显示loading"
            android:padding="10dp"
            android:onClick="@{v->click.onClick(v)}"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ViewStub
            android:id="@+id/viewstub"
            android:layout="@layout/layout_nodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ViewStub
            android:id="@+id/viewStubLoading"
            android:layout="@layout/layout_loading_viewstub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/contentTv"
            android:text="111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/retrofitTv"
            android:text="Retrofit"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ringTv"
            android:text="自定义view圆环"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/cakeViewTv"
            android:text="自定义饼状图"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</layout>